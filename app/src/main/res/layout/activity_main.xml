<LinearLayout
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/head"
        android:text="COLLEGE OF ENGINEERING TRIKARIPUR, Cheemeni"
        android:background="#FFF2004D"
        android:padding="2.0dip"
        android:layout_width="match_parent"
        android:layout_height="75.0dip"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="25dp" />

    <ImageView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/newimg"
        android:layout_gravity="center" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:background="#ffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="3">


                <Button
                    android:id="@+id/b1"
                    android:textColor="#fff"
                    android:textSize="50sp"
                    android:background="@drawable/noti"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:clickable="false" />


                <Button
                    android:id="@+id/b2"
                    android:textColor="#fff"
                    android:background="@drawable/student"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/b3"
                    android:textColor="#fff"
                    android:background="@drawable/events"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="3">


                <TextView
                    android:background="#d400aa"
                    android:id="@+id/t1"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="NOTIFICATIONS"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#d400c8"
                    android:id="@+id/t2"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="STUDENT DETAILS"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#be00d4"
                    android:id="@+id/t3"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="EVENTS"
                    android:textColor="#fff"
                    android:textSize="13sp" />




            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/b4"
                    android:textColor="#fff"
                    android:background="@drawable/academics"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/b5"
                    android:textColor="#fff"
                    android:background="@drawable/facilities"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/b6"
                    android:textColor="#fff"
                    android:background="@drawable/depts"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="3">


                <TextView
                    android:background="#aa00d4"
                    android:id="@+id/t4"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="FACILITIES"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#9100d4"
                    android:id="@+id/t5"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PRINCIPAL"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#7800d4"
                    android:id="@+id/t6"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="DEPARTMENTS"
                    android:textColor="#fff"
                    android:textSize="13sp" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:weightSum="3">
                <Button
                    android:id="@+id/b7"
                    android:textColor="#fff"
                    android:background="@drawable/noti"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />


                <Button
                    android:id="@+id/b8"
                    android:textColor="#fff"
                    android:background="@drawable/student"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/b9"
                    android:textColor="#fff"
                    android:background="@drawable/events"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="3">


                <TextView
                    android:background="#d400aa"
                    android:id="@+id/t7"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="FACULTY"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#d400c8"
                    android:id="@+id/t8"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="COMMUNITIES"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#be00d4"
                    android:id="@+id/t9"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="COLLEGE BUS"
                    android:textColor="#fff"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/b10"
                    android:textColor="#fff"
                    android:background="@drawable/academics"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />


                <Button
                    android:id="@+id/b13"
                    android:textColor="#fff"
                    android:background="@drawable/facilities"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/b12"
                    android:textColor="#fff"
                    android:background="@drawable/depts"
                    android:textSize="50sp"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:weightSum="3">


                <TextView
                    android:background="#aa00d4"
                    android:id="@+id/t10"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PHOTO GALLERY"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#9100d4"
                    android:id="@+id/t11"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="MESSAGE BOX"
                    android:textColor="#fff"
                    android:textSize="13sp" />

                <TextView
                    android:background="#7800d4"
                    android:id="@+id/t12"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="ABOUT"
                    android:textColor="#fff"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>