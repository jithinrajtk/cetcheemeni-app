<LinearLayout
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/newimg"
        android:layout_gravity="center" />

    <LinearLayout
        android:paddingLeft="4dp"
        android:paddingRight="2dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <Button
            android:layout_weight="1"
            android:text="The College has eight buses in different routes.\n Taliparamba, Kanhangad, Payyanur, Trikaripur and Pazhayangadi. To Taliparamba and Kanhangad there are 2 buses to the same route."

            android:textColor="#000"
            android:gravity="left"
            android:id="@+id/b1"
            android:textAllCaps="false"

            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
